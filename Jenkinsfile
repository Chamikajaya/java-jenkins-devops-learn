pipeline {

    agent any  // will run on any available agent

    stages{
        
        stage('Build') {
            steps {
                echo 'Building the project..'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing the project..'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project..'
            }
        }



    }



}